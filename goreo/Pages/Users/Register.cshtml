@page
@model goreo.Pages.Users.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Register.css"/>

<div class="register-background container-fluid">
    <div class="row register-row"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="">
                <div class="logo-big text-center">
                    <img src="~/photos/Group 1.png" alt="logo"/>
                </div>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col">
                            <input asp-for="Registrant.Email" type="email" class="form-control" id="input-email" aria-describedby="emailHelp" placeholder="Email"/>
                            <span asp-validation-for="Registrant.Email" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Registrant.Username" type="text" class="form-control" id="input-nick" aria-describedby="emailHelp" placeholder="Nick"/>
                            <span asp-validation-for="Registrant.Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <input asp-for="Registrant.Password" type="password" class="form-control" id="input-password" placeholder="Hasło">
                            <span asp-validation-for="Registrant.Password" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Registrant.FirstName" type="text" class="form-control" id="input-name" aria-describedby="emailHelp" placeholder="Imię"/>
                            <span asp-validation-for="Registrant.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <input asp-for="Registrant.Surname" type="text" class="form-control" id="input-surname" aria-describedby="emailHelp" placeholder="Nazwisko"/>
                            <span asp-validation-for="Registrant.Surname" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Registrant.CityOfResidence" type="text" class="form-control" id="input-home" aria-describedby="emailHelp" placeholder="Miejscowość zamieszkania"/>
                            <span asp-validation-for="Registrant.CityOfResidence" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="label-photo" for="select-photo">Zdjęcie</label>
                        <input asp-for="Registrant.ProfileImage" type="file" class="form-control-file select-button" id="select-photo">
                        <span asp-validation-for="Registrant.ProfileImage" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="custom-control custom-switch register-switch">
                            <input asp-for="Registrant.IsLeader" type="checkbox" class="custom-control-input" id="customSwitch1">
                            <label class="custom-control-label label-check" for="customSwitch1">Czy jest przodownikiem turystyki górskiej PTTK</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="Registrant.LeaderIdNo" type="text" class="form-control" id="input-number" aria-describedby="emailHelp" placeholder="Numer legitymacji"/>
                        <span asp-validation-for="Registrant.LeaderIdNo" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Stwórz" class="btn btn-primary button-create"/>
                    </div>
                    <div class="back-to-login text-center">
                        <a asp-page="Login" id="to-login">Wróć do logowania</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>